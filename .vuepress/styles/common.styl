html {
  font-size: 15px;
  font-family: Helvetica, sans-serif, Arial;
}

a {
  text-decoration: none;
  color: $link-color;
}

p {
  margin: 0;
  color: $font-color;
}

ul {
  margin: 0;
  padding-inline-start: 20px;

  li {
    list-style: none;
  }
}

img {
  width: 100%;
  vertical-align: middle;
}

blockquote {
  margin: $base-padding 0;
  border-left: 3px solid darksalmon;

  p {
    color: darken($font-color, 50%);
  }
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.sticked {
  background: #ff652f;
  border-radius: 4px;
  padding: 2px 4px;
  color: #FFF;
}

// flex layout
.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-col {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.space-between{
  display: flex;
  justify-content: space-between
}

// font
.h4 {
  font-size: 16px;
  font-weight: bold;
  margin: $base-padding / 2 0;
}

.h2-bold {
  font-size: 30px;
  font-weight: bold;
  margin: $base-padding 0;
  white-space: normal;
  text-overflow: ellipsis;
  overflow: hidden;
}
.h4-bold {
  font-size: 14px;
  font-weight: bold;
  margin: $base-padding 0;
  white-space: normal;
  text-overflow: ellipsis;
  overflow: hidden;
}
.h4-bold + .h2-bold {
 margin-top: 0; 
}
.text{
      font-weight: 400;
    color: #777;
    font-size: 0.95em;
    }
.text-white {
  color: #FFF;
}

.text-big {
  font-size: 1.4em;
  font-weight: 300;
  line-height: 1.8em;
  color: #111;
}

.link {
  color: #fff;
  font-size: 18px;
  cursor: pointer;
  text-decoration: underline;
}

.container, .container-fluid {
  container();
  padding: 15px;
  .row {
    grid();
    &.reverse{
    flex-direction: row-reverse;
    }
  }
}
.container-fluid{
  padding: 0;
  }

.pd-15 {
  padding: 15px;
}
.pdv-15{
 padding: 15px 0;
}
.pdh-15{
 padding:0 15px;
}