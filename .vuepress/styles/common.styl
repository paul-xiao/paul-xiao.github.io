html
  font-size: 15px
  font-family: Helvetica, sans-serif, Arial
a
  text-decoration: none
  color: $link-color
p
  margin: 0
  color: $font-color
ul
  margin: 0
  padding-inline-start: 20px;
  li
    list-style none
blockquote
  margin: $base-padding 0
  border-left: 3px solid darksalmon
  p
    color: darken($font-color, 50%)  
.flex-row
  display flex
  flex-direction row
.sticked
  background: #ff652f
  border-radius: 4px
  padding: 2px 4px
  color: #FFF
  
// flex layout
.flex
  display flex
  justify-content: center
  align-items: center
.flex-col
  display flex
  justify-content: center
  align-items: center
  flex-direction: column

// font
.h2
  font-size: 20px
  font-weight: bold
  margin: $base-padding 0;
.h4
  font-size: 16px
  font-weight: bold
  margin: $base-padding/2  0;  