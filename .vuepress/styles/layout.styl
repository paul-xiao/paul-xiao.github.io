.theme-header 
  background $base-color
  display flex
  flex-direction: column
  padding: 0 $base-padding
  max-width: 1000px
  margin: 0 auto
  .left
      flex 1
      a
       color: $link-color
       font-family: Copperplate, "Copperplate Gothic Light", fantasy
       font-size: 2.5em
       line-height: 100px
  .nav
      flex 1
      text-align: left
      display: flex
      position: relative
      align-items: center
      .title
        display: none  
      .search-box
        input
          height: 30px
          width: 200px
          outline: none
          padding: 0 5px
          font-size: 15px
          color: $font-color
          background: $base-color
          border: 1px solid $border-color
          border-radius: 15px
          text-indent: 10px
      .search-result
        min-width: 180px
        height: auto
        padding: $base-padding
        border: 1px solid $border-color
        background: $base-color
        position: absolute
        top: 50px
        text-align: left
        line-height: 35px
        &-item
          line-height: 35px
          & a:hover
            color: lighten($link-color, 50%)
      ul
        margin 0
        padding: 0
        li
          list-style none
          display inline
          padding: 0 15px
          &:first-child
            padding-left: 0
          a
           text-decoration: none
           color: $font-color
           transition: all ease-in-out 0.2s
           padding: 5px 0
           &:active, &:hover, &.active{
              color: lighten($font-color, 10%)
              border-bottom: 2px solid $link-hover-color
             }
.theme-footer
  max-width: 1000px
  margin: 0 auto
  height: $head-height
  line-height: $head-height
  background: $base-color
  text-align: center
  padding: 0 $base-padding
  border-top: 1px solid $border-color
  p
   margin: 0
   color: $font-color
   font-size: 12px           