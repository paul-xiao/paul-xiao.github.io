body {
  margin: 0;
  color: $font-color;
  line-height: normal;
  font-family: Roboto, sans-serif;
}

.theme-content {
  .main, .aside{
   padding-bottom: 50px;  
  }
  .banner {
    bg('/hero.jpg');
    width: 100%;

    &-intro {
      padding: 200px 30px;
    }
  }
  .latest{
   margin-bottom: 50px;
   .img{
     height: 150px;
    }
  }

  .intro{
     padding: 15px;
     overflow-x: hidden
    }
  .top3{
    padding: 15px 0;
    @media(min-width: 1200px){
      padding: 15px;  
    }
    .footer{
      display:flex;
      margin-top: 15px;
      .date,.comments{
       color: #777;
       font-size:0.95em;  
       margin-right: 10px
      }
      }
    }
  .list-wrap {
    flex: 1;
    overflow hidden
  }
  .post-thumbnail{
    height:180px;}



  .pagination {
    padding: 15px
    text-align: center;
    .page {
     width: 40px;
    height: 40px;
    line-height: 40px;
    border-radius: 50% !important;
    border: none;
    color: #555;
    text-align: center;
    display: inline-block;
    margin: 5px;

      &.active,&:hover,&:focus,&:active {
        background: $border-color;
        cursor: pointer;
      }
    }
  }


  .side-archives {
    .widget {
        margin-bottom: 40px;
        padding: 15px 30px;
        border: 1px solid #eee;
        &.search{
          input {
            
          width: 100%;
          height: 40px;
          line-height: 40px;
          border: none;
          border-bottom: 1px solid #ddd;
          font-size: 0.95em;
          font-family: "Open Sans", sans-serif;
          font-weight: 400;
          background: none;
          outline: none;
          -webkit-appearance:none;
          &::-webkit-search-cancel-button {display: none;}
          }
          .submit{
                height: 40px;
                padding: 0;
                line-height: 40px;
                background: none;
                border: none;
                color: #555;
                font-size: 0.9em;
                position: absolute;
                top: 0;
                right: 0;
           }
          }
          .latest-post{
            display flex
            margin-bottom: 10px;
           .img{
             width: 50px;
             height 50px;
             }
            .roundup{
              margin-left: 5px
              .title{
                margin: 0 0 5px 0;
              }
            }
          }
    }


    .group-by-tags {
      .tag {
        background: $white;
        margin: 2px;
        padding: 2px 10px;
        display: inline-block;
        color: #777;
        cursor: pointer;
        border-radius: 10px;
        border:1px solid #f2f2f2;

        &:hover {
          background: $border-color;
        }
      }
    }

    .group-by-categories {
      .category {
        background: #f2f2f2;
        padding: 8px 15px;
        display: flex;
        justify-content: space-between;
        color:#777;
        cursor: pointer;
        text-transform: capitalize;
        &:nth-child(odd) {
         background: #fff;
         
        }
      }
    }
  }



}

