body
  margin: 0
  color: $font-color
  line-height: normal
  font-family: Roboto,sans-serif
.theme-container
.theme-content
  min-height: "calc(100vh - %s)" % ($head-height*2 + $base-padding*2) 
  padding: $base-padding
  background: $base-color
  max-width: 1000px
  margin: 0 auto
  .list-wrap
    flex:1
  .archives
    .total
      color: lighten($font-color, 20%)
    .archive
      &-title
        color: $font-color
      &-item
        display: block
        padding: 5px 0
        color: $font-color
        &:hover
          color: $link-hover-color
          transform: translateX(10px)
          transition: all ease 0.5s
  &>.tags
    .tag
      background: $tag-color
      margin: 5px
      padding: 5px 15px
      display: inline-block
      color: $base-color
      cursor: pointer
      &:hover
        transform: scale(1.1)
        transition: all ease-in 0.5s
    .category
      background: $category-color
      margin: 5px
      padding: 5px 15px
      display: inline-block
      color: $base-color
      cursor: pointer
      &:hover
        transform: scale(1.1)
        transition: all ease-out 0.5s
  .pagination
    width: 200px
    margin: 10px 0
    .page
      border: 1px solid $border-color
      cursor: pointer
      padding: 0 10px
      margin: 5px
      color: $font-color
      &.active
        background: $border-color
  .list
    display: flex
    flex-direction: row
    .archives
      margin: 10px 0
      width: 200px
      padding: $base-padding
      .title
        margin: 0
      .total
        color: lighten($font-color, 20%)
      .archive
        &-title
          color: $font-color
        &-item
          display: block
          padding: 5px 0
          color: $font-color
          &:hover
            color: $link-hover-color
            transform: translateX(10px)
            transition: all ease 0.5s
    &-inner
      flex:1
    &-item
      padding: $base-padding 0
      margin: 10px 0
      &-head
        line-height: 30px
        .title
          text-decoration: none
          color: $link-color
          font-size: $title-font-size
        small
          font-size: 12px
          color: $font-color
          .publish-date{
           float right
          }
          .tag
           cursor: pointer
           color: $tag-color
           &:active, &:focus, &:hover
             color: $tag-color
          .category
           cursor: pointer
           color: $category-color
           &:active, &:focus, &:hover
             color: $category-color
      &-excerpt
        &>p
          margin: 0  
          padding: 10px 0
          img
            width: 200px
            vertical-align: middle
            display: block
