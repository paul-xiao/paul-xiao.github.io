.theme-header {
  background: $base-color;
  .inner {
    display: flex;
  }

  .left {
    flex: 1;

    a {
      color: $link-color;
      font-family: Copperplate, 'Copperplate Gothic Light', fantasy;
      font-size: 2.5em;
      line-height: 100px;
    }
  }

  .nav {
    flex: 1;
    text-align: left;
    display: flex;
    position: relative;
    align-items: center;
    justify-content: flex-end;

    .title {
      display: none;
    }

    .search-box {
      input {
        height: 30px;
        width: 200px;
        outline: none;
        padding: 0 5px;
        font-size: 15px;
        color: $font-color;
        background: $base-color;
        border: 1px solid $border-color;
        border-radius: 15px;
        text-indent: 10px;
      }
    }

    .search-result {
      min-width: 180px;
      height: auto;
      padding: $base-padding;
      border: 1px solid $border-color;
      background: $base-color;
      position: absolute;
      top: 50px;
      text-align: left;
      line-height: 35px;

      &-item {
        line-height: 35px;

        & a:hover {
          color: lighten($link-color, 50%);
        }
      }
    }

    ul {
      margin: 0;
      padding: 0;

      li {
        list-style: none;
        display: inline;
        padding: 0 15px;

        &:first-child {
          padding-left: 0;
        }

        a {
          text-decoration: none;
          color: $font-color;
          border-bottom: 2px solid $white;
          transition: border-color ease-in-out 0.25s;
          padding: 5px 0;

          &:active, &:hover, &.active {
            color: lighten($font-color, 10%);
            border-bottom-color: $link-hover-color;
          }
        }
      }
    }
  }
}

.theme-footer {
  margin: 0 auto;
  background: #000;
  text-align: center;
  color: #f2f2f2;

  .inner {
    padding: $base-padding * 4;
    max-width: 1000px;
    margin: 0 auto;
    align-items: flex-start;
    
    .contact {
      flex: 1;
      margin-bottom: 30px

      .title {
        font-weight: bold;
      }

      &-item {
        text-align: left;
      }
    }

    .nav {
      flex: 1;
      text-align: left;
      margin-bottom: 30px
    }

    .latest-posts {
      margin-bottom: 30px
      flex: 1;
      text-align: left;
       .latest-post{
            display flex
            margin-bottom: 10px;
           .img{
             width: 50px;
             height 50px;
             }
            .roundup{
              margin-left: 5px
              .title{
                margin: 0 0 5px 0;
              }
            }
       }
    }

   
  }
   .copyright {
      padding: $base-padding*2;
      margin: 0;
      color: $base-color;
      font-size: 12px;
      text-transform: capitalize;
      border-top: 1px solid #333;
    }
}

