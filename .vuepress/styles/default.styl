.content__default, .list-item-excerpt
  img
    width 300px
    display block
  blockquote
    background: $border-color
    padding: $base-padding
  .language-js, .language-bash, .language-less, .language-html, .language-sh
    pre
      background: $bg-code
      padding: $base-padding
      color: lighten($font-color, 40%)
      .selector
        color: orange
      .property
        color: pink 
      .token
        white-space: normal
      .comment
        color: $comment-color
      .punctuation
        color: lighten($font-color, 20%)
      .string
        color: darkcyan
      .operator 
        color:lighten($font-color, 10%)
      .function
        color: lighten(darkcyan, 40%)
      .parameter
        color: lighten(lightblue, 40%)
      .keyword
        color: darken(lightblue, 20%)   
      .class-name
        color: darken(pink, 20%) 
.content_default-title
  height: 50px
  line-height: 50px
  .title
    text-decoration: none
    color: $font-color
    font-size: 16px
  small
    font-size: 12px
    color: $font-color
    .publish-date{
      float right
    }
    .category
      cursor: pointer
      color: $category-color
      &:active, &:focus, &:hover
        color: $category-color
    .tag
      cursor: pointer
      color: $tag-color
      &:active, &:focus, &:hover
        color: $tag-color