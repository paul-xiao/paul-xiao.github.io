.theme-content {
  .content__default__wrap {
    padding: $base-padding 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
}

.content__default, .list-item-excerpt {
  flex: 1;
  margin-top: 20px;

  img {
    width: 300px;
    display: block;
    margin: 10px 0;
  }

  blockquote {
    background: $border-color;
    padding: $base-padding;
  }

  .extra-class {
    pre {
      background: $bg-code;
      padding: $base-padding;
      color: lighten($font-color, 40%);
      overflow: auto;
      font-size: 13px;

      &::-webkit-scrollbar {
        height: 5px;
      }

      &::-webkit-scrollbar-track {
        box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.3);
      }

      &::-webkit-scrollbar-thumb {
        background-color: darkgrey;
        outline: 1px solid slategrey;
      }

      .selector {
        color: orange;
      }

      .property {
        color: pink;
      }

      .token {
        white-space: normal;
      }

      .comment {
        color: $comment-color;
      }

      .punctuation {
        color: lighten($font-color, 20%);
      }

      .string {
        color: darkcyan;
      }

      .operator {
        color: lighten($font-color, 10%);
      }

      .function {
        color: lighten(darkcyan, 40%);
      }

      .parameter {
        color: lighten(lightblue, 40%);
      }

      .keyword {
        color: darken(lightblue, 20%);
      }

      .class-name {
        color: darken(pink, 20%);
      }
    }
  }
}

.content_default-title {
  height: 50px;
  line-height: 50px;

  .title {
    text-decoration: none;
    color: $font-color;
    font-size: $title-font-size;
  }

  small {
    font-size: 12px;
    color: $font-color;

    .publish-date {
      float: right;
    }

    .category {
      cursor: pointer;
      color: $category-color;

      &:active, &:focus, &:hover {
        color: $category-color;
      }
    }

    .tag {
      cursor: pointer;
      color: $tag-color;

      &:active, &:focus, &:hover {
        color: $tag-color;
      }
    }
  }
}

.content_default-foot {
  .tags{
  margin: 40px 0;
    .small{
      border: 1px solid #eee;
      padding: 5px 10px;
      border-radius: 15px;
      display: inline-block;
      margin-bottom: 10px;
       margin-right: 10px; 
      }
   
  }
  .prev, .next{
   display: flex;  
   align-items: center;
   border: 1px solid #eee;
   margin-bottom: 10px;
   padding: 5px 15px;
 
   .arrow{
     width:35px;
     height: 35px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 15px;
    border: 1px solid #eee;
    border-radius: 50%;
    font-size: 1.2em;
    transition: all 0.2s;
    i{
      color: #ccc;
    }
    }

      &:active,&:hover {
     border-color: #777;
     .arrow{
       background: #777;
       i{
         color:#fff;
       }
       
    }
     }

  }
      .next{
     justify-content: flex-end;
     .arrow{
       margin-right:0;
       margin-left:15px;
       }
    }
}

.last-update {
  color: lighten($font-color, 20%);
  font-size: 12px;
}